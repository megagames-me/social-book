generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("HEROKU_POSTGRESQL_GOLD_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  description String?
  posts       Post[]
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String @unique
  creatorId Int
  content   String
  creator   User   @relation(fields: [creatorId], references: [id])
}
