generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  username    String
  password    String
  description String
  posts       Post[]
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String
  creatorId Int
  content   String
  creator   User   @relation(fields: [creatorId], references: [id])
}
